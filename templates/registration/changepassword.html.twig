{# templates/change_password/index.html.twig #}

{% extends 'ogrencibase.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block body %}
    <h1>Change Password</h1>

    {{ form_start(changePasswordForm) }}
        {{ form_row(changePasswordForm.oldPassword) }}
        {{ form_row(changePasswordForm.newPassword) }}
        {{ form_row(changePasswordForm.confirmNewPassword) }}

        <button type="submit">Change Password</button>
    {{ form_end(changePasswordForm) }}
{% endblock %}
